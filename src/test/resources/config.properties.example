# Zara UI Test Configuration Template
# Copy this file to config.properties and update with your values

# Browser Configuration
browser=Chrome
# Supported browsers: Chrome, Firefox, Edge

# Environment URLs
baseUrl=https://www.zara.com/tr/
# Alternative environments:
# baseUrl.staging=https://staging.zara.com/tr/
# baseUrl.production=https://www.zara.com/tr/

# Test User Credentials
# IMPORTANT: Use test accounts only, never production accounts
userEmail=your.test@email.com
userPassword=your_test_password

# Test Configuration
# Maximum wait time in seconds
maxWaitTime=30

# Screenshot Configuration  
screenshotOnFailure=true
screenshotDirectory=target/screenshots

# Test Data Configuration
testDataFile=ZaraUITestDatas.xlsx

# Logging Level (ERROR, WARN, INFO, DEBUG)
logLevel=INFO

# Browser Options
headless=false
maximizeWindow=true

# Retry Configuration
maxRetryCount=3
retryDelay=1000 